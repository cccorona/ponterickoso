<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/grey_900"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/logorick"
                android:background="@color/grey_900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <EditText
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                style="@style/RyMTextStyle"
                android:textColorHint="@color/colorAccent"
                android:layout_margin="12dp"
                android:background="@drawable/round_shape"
                android:id="@+id/search"
                android:hint="@string/buscar"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp">


                <TextView
                    android:textColor="@color/green_A700"
                    style="@style/RyMTextStyle"
                    android:textSize="18sp"
                    android:text="@string/select_page"
                    android:id="@+id/left"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/pagination_list"
                    android:layout_width="150dp"
                    android:layout_height="50dp"/>



            </LinearLayout>








            <com.google.android.material.card.MaterialCardView
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textColor="@color/green_A700"
                        style="@style/RyMTextStyle"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:id="@+id/detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_margin="8dp"
                            android:id="@+id/detail_icon"
                            android:layout_width="130dp"
                            android:layout_height="130dp"/>



                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/info_layout"
                            android:layout_margin="8dp"
                            android:layout_toRightOf="@id/detail_icon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle1"
                                android:textColor="@color/green_A700"
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle1"
                                android:textColor="@color/green_A700"
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle2"
                                android:textColor="@color/green_A700"
                                android:id="@+id/specie"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle3"
                                android:textColor="@color/green_A700"
                                android:id="@+id/origin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>



                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle3"
                                android:textColor="@color/green_A700"
                                android:id="@+id/location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                            <TextView
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle3"
                                android:textColor="@color/green_A700"
                                android:id="@+id/creado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>



                            <TextView
                                android:text="@string/eposidios"
                                android:padding="4dp"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:textSize="20sp"
                                style="@style/RyMTextStyle3"
                                android:textColor="@color/green_A700"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>















                        </LinearLayout>






                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_margin="8dp"
                        android:id="@+id/list_episodio"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"/>




                </LinearLayout>









            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>






</androidx.core.widget.NestedScrollView>